<html lang="{{ request.locale.iso_code }}">
  <head>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>

    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel='preconnect' href='https://fonts.shopifycdn.com' crossorigin>
    {%- endunless -%}
    
    {{ content_for_header }}
    
    <style>
      @import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap');
    </style>
    <link rel="stylesheet" href="https://use.typekit.net/lrh3cxo.css">

    {% style %}

      :root {
        --layout-max-width: 1620px;
        --layout-content-tight: 1000px;
        
        --font-heading-family: "ivymode", sans-serif;
        --font-body-family: "Proxima Nova", sans-serif;

        --color-btn-primary: #fff000;
      }
    {% endstyle %}

    {{ 'style.css' | asset_url | stylesheet_tag }}

    <script>
      var Shopify = Shopify || {};
      Shopify.money_format = "{{ shop.money_format }}";
    </script>
  </head>

  <body class="template-{{ template.name }} template-{{ template.name }}-{{ template.suffix | replace: ' ', '-' | downcase }}">
    {{ content_for_layout }}
  </body>
</html>